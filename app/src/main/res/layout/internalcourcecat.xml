<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/border_background"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:elevation="8dp"
        app:cardBackgroundColor="#F3F3F2"
        android:id="@+id/layout1"
        app:cardCornerRadius="4dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_margin="4dp"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:id="@+id/imgview"
                android:visibility="gone"
                android:layout_height="90dp" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/courcename"
                android:textSize="16dp"
                android:text="IIT"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/imgview"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/maven_pro"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Buy"
        android:visibility="gone"
        android:id="@+id/buyycource"
        android:textColor="#fff"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/button_background"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:id="@+id/view"
        android:background="#BDBCBC"
        android:layout_below="@id/layout1"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:visibility="gone"
        android:layout_marginStart="10dp"
        android:layout_below="@id/view"
        android:layout_marginBottom="5dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text=" study Material"
            android:drawableStart="@drawable/ic_library_books_black_24dp"
            android:fontFamily="@font/maven_pro"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Video"
            android:drawableStart="@drawable/play"
            android:fontFamily="@font/maven_pro"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Online test"
            android:drawableStart="@drawable/ic_library_books_black_24dp"
            android:fontFamily="@font/maven_pro"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Practice test"
            android:drawableStart="@drawable/ic_library_books_black_24dp"
            android:fontFamily="@font/maven_pro"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Assignments"
            android:drawableStart="@drawable/ic_library_books_black_24dp"
            android:fontFamily="@font/maven_pro"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:text="Duration"
            android:drawableStart="@drawable/ic_access_time_black_24dp"
            android:fontFamily="@font/maven_pro_medium"
            android:visibility="gone"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>