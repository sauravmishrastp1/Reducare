<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.RegistrationActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:id="@+id/applogo"
                app:civ_circle_background_color="#fff"
                app:civ_border_overlay="true"
                android:src="@drawable/atoozlogo"
                app:civ_border_width="1dp"
                android:layout_marginTop="26dp"
                app:civ_border_color="#fff"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="100dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/linearfirst"
                android:layout_marginTop="16dp"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">


                <EditText

                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_design"
                    android:padding="10dp"
                    android:fontFamily="monospace"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Name"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="12sp" />





                <EditText

                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_design"
                    android:padding="10dp"
                    android:fontFamily="monospace"
                    android:drawableRight="@drawable/ic_email_black_24dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="20dp"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="12sp" />



                <EditText

                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_design"
                    android:padding="10dp"
                    android:fontFamily="monospace"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Mobile Number"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="20dp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="12sp" />


                <EditText

                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edittext_design"
                    android:padding="10dp"
                    android:fontFamily="monospace"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:hint="Address"
                    android:layout_marginTop="20dp"
                    android:inputType="textEmailAddress"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="12sp" />





                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/login_phone"
                    android:background="@drawable/edittext_design"
                    android:padding="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:fontFamily="monospace"
                    android:textSize="12sp"
                    android:hint="Password"
                    android:drawableRight="@drawable/ic_lock_outline_black_24dp"
                    android:layout_marginTop="20dp"
                    android:inputType="textPassword"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black" />


                <Button
                    android:id="@+id/registerbtn"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_below="@id/login_pass"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/buttons"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    android:fontFamily="monospace"
                    android:layout_marginTop="20dp"
                    android:elevation="4dp"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:text="Register"
                    android:textColor="#fff"
                    />

            </LinearLayout>



            <TextView
                android:id="@+id/signinlink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allready have account? Signin"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/maven_pro"
                android:layout_below="@id/btnlinear"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:progressBackgroundTint="@color/yellow"/>

</RelativeLayout>