<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.Support_Activity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:layout_height="48dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="0dp"
        app:cardElevation="4dp">

        <ImageView
            android:id="@+id/backMyOrders"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/backpress" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Support"
            android:gravity="center_vertical"
            android:layout_marginLeft="56dp"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:fontFamily="@font/maven_pro_medium"
            android:textColor="#FFF"/>

    </androidx.cardview.widget.CardView>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_below="@id/toolbar"
    android:id="@+id/card1"
    android:layout_margin="20dp"
    app:cardCornerRadius="3dp"
    android:elevation="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_height="100dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:id="@+id/phone2"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_map_black_24dp"
            android:layout_height="50dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:id="@+id/phone_txt"
            android:layout_marginStart="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/phone2"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="OUR OFFICE LOCATION"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/maven_pro"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Mahapura,Ajmer Road,Jaipur"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:fontFamily="@font/maven_pro"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="Rajesthan-302026"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:fontFamily="@font/maven_pro"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card2"
        android:layout_below="@id/card1"
        android:layout_margin="20dp"
        app:cardCornerRadius="3dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_centerVertical="true"
                android:id="@+id/phone2"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_local_phone_black_24dp"
                android:layout_height="50dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/phone_txt"
                android:layout_marginStart="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/phone2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="OUR CONTACT NUMBER"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:fontFamily="@font/maven_pro"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="+916367319808"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:fontFamily="@font/maven_pro"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Rajesthan-302026"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:fontFamily="@font/maven_pro"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@id/card2"
        android:layout_margin="20dp"
        app:cardCornerRadius="3dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_height="100dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_centerVertical="true"
                android:id="@+id/phone2"
                android:layout_marginStart="10dp"
                android:src="@drawable/semail"
                android:layout_height="50dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/phone_txt"
                android:layout_marginStart="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/phone2"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="OUR CONTACT EMAIL"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:fontFamily="@font/maven_pro"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="support@rashuaneducare.com"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:fontFamily="@font/maven_pro"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Rajesthan-302026"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:visibility="gone"
                    android:fontFamily="@font/maven_pro"
                    android:textStyle="bold"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>