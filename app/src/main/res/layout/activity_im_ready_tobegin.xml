<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   tools:context=".activity.Quiz_Start_Instruction">
    <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="120dp"
                android:id="@+id/circleimg"
            android:visibility="gone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/atoozlogo"
                android:layout_height="120dp" />
        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/text1"
                android:layout_below="@id/circleimg"
                android:layout_centerHorizontal="true"
                android:text="WIN PRIZE UPTO "
                android:visibility="gone"
                android:textColor="#000"
                android:textStyle="bold"
                android:fontFamily="@font/maven_pro"
                android:textSize="18dp"
                android:layout_height="wrap_content" />
        <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textview2"
                android:layout_below="@id/text1"
                android:textSize="25dp"
                android:textStyle="bold"
                android:visibility="gone"
                android:fontFamily="@font/maven_pro"
                android:layout_centerHorizontal="true"
                android:text="Quiz"
                android:textColor="#F44336"
                android:layout_height="wrap_content" />
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/cardview"
                android:layout_below="@id/textview2"
                android:layout_above="@id/buybutton"
                android:layout_marginTop="40dp"
                android:layout_margin="15dp"
                app:cardCornerRadius="8dp"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:elevation="8dp"
                    android:id="@+id/relativelayout"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/instruction"
                        android:text="Instruction"
                        android:layout_marginTop="5dp"
                        android:layout_centerHorizontal="true"
                        android:textSize="18dp"
                    android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/maven_pro"
                        android:layout_height="wrap_content" />
                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_below="@id/instruction"
                        android:layout_height="wrap_content">



                    <LinearLayout
                            android:layout_width="match_parent"

                            android:id="@+id/linear1"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="14dp"
                            android:orientation="vertical"
                            android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="20dp"
                                android:src="@drawable/dot"
                                android:visibility="gone"
                                android:layout_marginTop="2dp"
                                android:layout_height="20dp" />
                        <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/termcondition1"
                                android:layout_marginStart="10dp"
                                android:text=""
                                android:textSize="12dp"
                                android:textColor="#000"
                                android:fontFamily="@font/maven_pro"
                                android:layout_height="wrap_content" />
                        <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/termcondition2"
                            android:visibility="gone"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="20dp"
                                android:text=". There will be only  75 question in thes test"
                                android:textSize="12dp"
                                android:fontFamily="@font/maven_pro"
                                android:layout_height="wrap_content" />
                        <TextView
                                android:layout_width="wrap_content"
                                android:id="@+id/termcondition3"
                            android:visibility="gone"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="20dp"
                                android:text=". There are  3 section in this question  paper consisting physics ,chemistry and mathmethematics having 25 question in each question"
                                android:textSize="12dp"
                                android:fontFamily="@font/maven_pro"
                                android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/termcondition4"
                            android:layout_marginStart="10dp"
                            android:visibility="gone"
                            android:layout_marginTop="20dp"
                            android:text=". There are  3 section in this question  paper consisting physics ,chemistry and mathmethematics having 25 question in each question"
                            android:textSize="12dp"
                            android:fontFamily="@font/maven_pro"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:id="@+id/termcondition5"
                            android:visibility="gone"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="20dp"
                            android:text=". There are  3 section in this question  paper consisting physics ,chemistry and mathmethematics having 25 question in each question"
                            android:textSize="12dp"
                            android:fontFamily="@font/maven_pro"
                            android:layout_height="wrap_content" />


                    </LinearLayout>
                </ScrollView>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:id="@+id/linear2"
                        android:visibility="gone"
                        android:layout_margin="14dp"
                        android:layout_below="@id/linear1"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="20dp"
                            android:src="@drawable/dot"
                            android:visibility="gone"
                            android:layout_marginTop="2dp"
                            android:layout_height="20dp" />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="sfadcasghdfasghdghasvdghsfvgh"
                            android:textSize="17dp"
                            android:fontFamily="@font/maven_pro"
                            android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_margin="14dp"
                        android:visibility="gone"
                        android:layout_below="@id/linear2"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                    <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="20dp"
                            android:src="@drawable/dot"
                            android:layout_marginTop="2dp"
                            android:layout_height="20dp" />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_marginStart="10dp"
                            android:text="sfadcasghdfasghdghasvdghsfvgh"
                            android:textSize="17dp"
                            android:fontFamily="@font/maven_pro"
                            android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:layout_width="match_parent"
            android:id="@+id/buybutton"
            android:text="I AM READY TO BEGIN"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="@font/maven_pro"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>